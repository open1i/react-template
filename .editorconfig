root = true                          # 表明这是最顶层的配置文件，不需要继续向上查找

[*]                                  # 对所有文件生效的配置
charset = utf-8                      # 使用 UTF-8 字符编码
indent_style = space                 # 使用空格进行缩进
indent_size = 2                      # 缩进大小为 2 个空格
end_of_line = lf                     # 使用 LF 作为行尾字符
insert_final_newline = true          # 文件末尾插入一个空行
trim_trailing_whitespace = true      # 删除行尾的空白字符

[*.md]                              # 专门针对 markdown 文件的配置
trim_trailing_whitespace = false     # 不删除行尾空白字符（因为 markdown 中两个空格表示换行）